@page
@model ContactsModel
@{
    ViewData["Title"] = "Контакты - EventSpace";
}

<!-- Локальные стили для карты и формы -->
<style>
    .contacts-hero {
        position: relative;
        height: 40vh; /* Компактный хедер */
        min-height: 350px;
        background: url('https://images.unsplash.com/photo-1423666639041-f14d70fa4c48?q=80&w=2000&auto=format&fit=crop') no-repeat center center/cover;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    /* Стиль полей ввода под дизайн (подчеркивание вместо рамки или мягкая рамка) */
    .form-control-custom {
        border: none;
        border-bottom: 1px solid #ccc;
        border-radius: 0;
        background-color: transparent;
        padding: 15px 0;
        transition: border-color 0.3s;
    }

        .form-control-custom:focus {
            box-shadow: none;
            border-color: var(--accent-gold);
            background-color: transparent;
        }

    .contact-icon-box {
        width: 50px;
        height: 50px;
        background-color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: var(--bg-dark);
        margin-right: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }
</style>

<!-- HERO SECTION -->
<section class="contacts-hero">
    <div class="hero-overlay"></div>
    <div class="hero-content text-white">
        <h1 class="hero-title" style="font-size: 3rem;">СВЯЗАТЬСЯ С НАМИ</h1>
        <p class="hero-subtitle mb-0">Ответим на вопросы, поможем с арендой, угостим кофе</p>
    </div>
</section>

<!-- ОСНОВНОЙ КОНТЕНТ -->
<section class="py-5">
    <div class="container py-4">
        <div class="row g-5">

            <!-- Левая колонка: Инфо -->
            <div class="col-lg-5">
                <h2 class="serif-font mb-4">Наши контакты</h2>
                <p class="text-muted mb-5">
                    Мы всегда рады видеть вас в нашем пространстве. Если у вас есть вопросы по мероприятиям или вы хотите арендовать зал, звоните или пишите.
                </p>

                <div class="d-flex align-items-center mb-4">
                    <div class="contact-icon-box">
                        <i class="bi bi-geo-alt"></i>
                    </div>
                    <div>
                        <span class="d-block text-uppercase small text-muted fw-bold">Адрес</span>
                        <span class="fs-5">г. Минск, ул. Пушкина, д. 100</span>
                    </div>
                </div>

                <div class="d-flex align-items-center mb-4">
                    <div class="contact-icon-box">
                        <i class="bi bi-telephone"></i>
                    </div>
                    <div>
                        <span class="d-block text-uppercase small text-muted fw-bold">Телефон</span>
                        <a href="tel:+375290000000" class="fs-5 text-dark text-decoration-none hover-gold">+375 (29) 000-00-00</a>
                    </div>
                </div>

                <div class="d-flex align-items-center mb-4">
                    <div class="contact-icon-box">
                        <i class="bi bi-envelope"></i>
                    </div>
                    <div>
                        <span class="d-block text-uppercase small text-muted fw-bold">Email</span>
                        <a href="mailto:hello@prawodar.by" class="fs-5 text-dark text-decoration-none hover-gold">hello@prawodar.by</a>
                    </div>
                </div>

                <div class="d-flex align-items-center mb-5">
                    <div class="contact-icon-box">
                        <i class="bi bi-clock"></i>
                    </div>
                    <div>
                        <span class="d-block text-uppercase small text-muted fw-bold">Режим работы</span>
                        <span class="fs-5">Ежедневно 10:00 — 22:00</span>
                    </div>
                </div>

                <!-- Соцсети -->
                <div>
                    <h5 class="serif-font mb-3">Мы в соцсетях</h5>
                    <div class="d-flex gap-3">
                        <a href="#" class="btn btn-outline-dark rounded-circle" style="width: 40px; height: 40px; display:flex; align-items:center; justify-content:center;"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="btn btn-outline-dark rounded-circle" style="width: 40px; height: 40px; display:flex; align-items:center; justify-content:center;"><i class="bi bi-telegram"></i></a>
                        <a href="#" class="btn btn-outline-dark rounded-circle" style="width: 40px; height: 40px; display:flex; align-items:center; justify-content:center;"><i class="bi bi-facebook"></i></a>
                    </div>
                </div>
            </div>

            <!-- Правая колонка: Форма обратной связи -->
            <div class="col-lg-7">
                <div class="bg-white p-5 rounded shadow-sm h-100">
                    <h3 class="serif-font mb-4">Напишите нам</h3>
                    <form method="post">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <label class="text-uppercase small text-muted fw-bold mb-1">Ваше имя</label>
                                <input asp-for="Input.Name" class="form-control form-control-custom" placeholder="Иван Иванов" />
                                <span asp-validation-for="Input.Name" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="text-uppercase small text-muted fw-bold mb-1">Email</label>
                                <input asp-for="Input.Email" class="form-control form-control-custom" placeholder="name@example.com" />
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>
                            <div class="col-md-12">
                                <label class="text-uppercase small text-muted fw-bold mb-1">Тема обращения</label>
                                <select asp-for="Input.Subject" class="form-select border-0 border-bottom rounded-0 py-3 bg-transparent text-secondary">
                                    <option value="Вопрос">Общий вопрос</option>
                                    <option value="Аренда">Аренда площадки</option>
                                    <option value="Сотрудничество">Сотрудничество / Спикерство</option>
                                </select>
                            </div>
                            <div class="col-md-12">
                                <label class="text-uppercase small text-muted fw-bold mb-1">Сообщение</label>
                                <textarea asp-for="Input.Message" class="form-control form-control-custom" rows="4" placeholder="Напишите ваш вопрос..."></textarea>
                                <span asp-validation-for="Input.Message" class="text-danger small"></span>
                            </div>

                            <div class="col-12 mt-4">
                                <button type="submit" class="btn btn-dark rounded-pill px-5 py-3 text-uppercase w-100 fw-bold" style="letter-spacing: 0.1em;">
                                    Отправить сообщение
                                </button>
                            </div>
                        </div>
                    </form>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success mt-4 rounded-0 border-0 bg-light text-success">
                            <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-white border-top">
    <div class="container py-3">
        <h2 class="section-title mb-5">Как нас найти</h2>
        <div class="row text-center g-4">
            <div class="col-md-4">
                <i class="bi bi-train-front text-muted display-4 mb-3 d-block"></i>
                <h5 class="serif-font">На метро</h5>
                <p class="text-muted small">Ст. м. "Пушкинская". Выход к кинотеатру "Аврора". 5 минут пешком вдоль проспекта.</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-car-front text-muted display-4 mb-3 d-block"></i>
                <h5 class="serif-font">На авто</h5>
                <p class="text-muted small">Заезд с ул. Притыцкого. У нас есть собственная парковка на 20 мест (шлагбаум открываем по звонку).</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-door-open text-muted display-4 mb-3 d-block"></i>
                <h5 class="serif-font">Вход</h5>
                <p class="text-muted small">Центральный вход в здание БЦ, поднимитесь на лифте на 3 этаж, лофт 305.</p>
            </div>
        </div>
    </div>
</section>

