@page
@model IndexModel
@{
    ViewData["Title"] = "Главная - EventSpace";
}

<!-- ПОДКЛЮЧАЕМ ШРИФТЫ (Добавил Oswald для заголовков, он поддерживает кириллицу) -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Oswald:wght@300;400;500;700&display=swap" rel="stylesheet">

<style>
    :root {
        --color-gold: #d4af37; /* Насыщенный золотой */
        --color-black: #111111;
        --color-white: #ffffff;
        --border-thick: 3px solid var(--color-black);
        --border-thin: 1px solid var(--color-black);
    }

    body {
        font-family: 'Montserrat', sans-serif;
        color: var(--color-black);
        background-color: var(--color-white);
    }

    /* ЗАГОЛОВКИ */
    h1, h2, h3, h4, h5 {
        font-family: 'Oswald', sans-serif;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-weight: 500;
    }

    .section-title {
        text-align: center;
        font-size: 3rem;
        margin-bottom: 3rem;
        position: relative;
        display: inline-block;
        width: 100%;
    }
    
    /* --- 1. HERO SECTION (ЗОЛОТОЙ ФОН) --- */
    .hero-main {
        background-color: var(--color-gold);
        /* Текстура шума для эффекта бумаги */
        background-image: url("/uploads/back.png");
        min-height: 85vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 2rem;
        border-bottom: var(--border-thick);
        color: var(--color-black); /* Черный текст на золотом */
        padding-top: 400px;
    }

    /* Абстрактный логотип (круг с линиями) */
    .hero-logo-abstract {
        width: 100px;
        height: 100px;
        border: 4px solid var(--color-black);
        border-radius: 50%;
        margin-bottom: 2rem;
        position: relative;
    }
    .hero-logo-abstract::after {
        content: '';
        position: absolute;
        top: 25%; left: 0;
        width: 100%; height: 50%;
        border-top: 4px solid var(--color-black);
        border-bottom: 4px solid var(--color-black);
    }

    .hero-title {
        font-size: 5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        line-height: 1;
    }

    .hero-subtitle {
        font-family: 'Montserrat', sans-serif;
        font-size: 1.1rem;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        margin-bottom: 3rem;
        font-weight: 600;
        max-width: 800px;
    }

    /* Кнопки в стиле Wodar Kawy */
    .btn-hero {
        background: transparent;
        color: var(--color-black);
        border: var(--border-thick);
        padding: 15px 40px;
        font-family: 'Oswald', sans-serif;
        font-size: 1.1rem;
        text-transform: uppercase;
        text-decoration: none;
        transition: 0.3s;
        display: inline-block;
        margin: 10px;
        font-weight: 700;
        letter-spacing: 0.05em;
    }

    .btn-hero:hover {
        background: var(--color-black);
        color: var(--color-gold);
        transform: translateY(-3px);
    }

    .btn-hero-white {
        background: var(--color-white); /* Белая кнопка для контраста */
    }

    /* --- 2. EVENTS (УПАКОВКА) --- */
    .event-card {
        border: var(--border-thick);
        background: white;
        height: 100%;
        transition: 0.3s;
        display: flex;
        flex-direction: column;
        margin-bottom: 30px;
    }
    
    .event-card:hover {
        transform: translate(-5px, -5px);
        box-shadow: 8px 8px 0px var(--color-gold);
    }

    .event-date-badge {
        background: var(--color-black);
        color: var(--color-white);
        font-family: 'Oswald', sans-serif;
        font-weight: 500;
        text-align: center;
        padding: 8px;
        font-size: 1rem;
        letter-spacing: 0.1em;
        display: block;
    }

    .event-thumb {
        height: 240px;
        overflow: hidden;
        border-bottom: var(--border-thick);
        background-color: #f0f0f0;
        position: relative;
    }
    
    .event-thumb img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        /* Убрали grayscale, теперь фото цветные! */
        transition: 0.5s;
    }
    
    .event-card:hover .event-thumb img {
        transform: scale(1.05);
    }

    .event-title {
        font-family: 'Oswald', sans-serif;
        font-size: 1.4rem;
        line-height: 1.3;
        margin: 20px;
        color: var(--color-black);
        text-transform: uppercase;
        flex-grow: 1;
    }

    .event-meta {
        font-family: 'Montserrat', sans-serif;
        font-size: 0.85rem;
        text-transform: uppercase;
        border-top: 1px solid #eee;
        padding: 15px 20px;
        display: flex;
        justify-content: space-between;
        font-weight: 700;
        color: #555;
    }
    
    .event-meta i {
        color: var(--color-gold);
        margin-right: 5px;
    }

    /* --- 3. OPPORTUNITIES / RENT (DARK BLOCK) --- */
    .bg-dark-custom {
        background-color: var(--color-black);
        color: var(--color-white);
        padding: 80px 0;
    }

    .info-card {
        display: block;
        position: relative;
        border: 1px solid #333;
        height: 350px;
        overflow: hidden;
        text-decoration: none;
        transition: 0.3s;
    }
    
    .info-card img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.4;
        transition: 0.5s;
    }
    
    .info-content {
        position: absolute;
        top: 0; left: 0;
        width: 100%; height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 30px;
        z-index: 2;
    }

    .info-card:hover {
        border-color: var(--color-gold);
    }
    .info-card:hover img {
        opacity: 0.2;
        transform: scale(1.1);
    }

    .info-title {
        font-family: 'Oswald', sans-serif;
        font-size: 2.5rem;
        color: var(--color-white);
        margin-bottom: 15px;
        text-transform: uppercase;
    }
    
    .info-desc {
        color: #ccc;
        font-size: 0.95rem;
        line-height: 1.6;
        max-width: 400px;
    }

    /* --- 4. FEATURES (ICONS) --- */
    .feature-box {
        text-align: center;
        padding: 30px 20px;
        border: var(--border-thin);
        height: 100%;
        transition: 0.3s;
        background: white;
    }
    .feature-box:hover {
        background: var(--color-black);
        color: white;
    }
    
    .feature-icon {
        font-size: 2.5rem;
        color: var(--color-black);
        margin-bottom: 20px;
        transition: 0.3s;
    }
    .feature-box:hover .feature-icon {
        color: var(--color-gold);
    }

    .feature-title {
        font-family: 'Oswald', sans-serif;
        font-size: 1.2rem;
        margin-bottom: 10px;
        text-transform: uppercase;
    }
    .feature-text {
        font-size: 0.9rem;
        line-height: 1.5;
        color: #666;
    }
    .feature-box:hover .feature-text {
        color: #ccc;
    }

    /* --- 5. SPEAKERS (POLAROID) --- */
    .speaker-card {
        border: var(--border-thin);
        padding: 15px 15px 25px 15px;
        background: white;
        text-align: center;
        transition: 0.3s;
        height: 100%;
    }
    .speaker-card:hover {
        transform: rotate(1deg);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    .speaker-img-container {
        width: 100%;
        aspect-ratio: 1/1; /* Квадрат */
        overflow: hidden;
        border: 1px solid #eee;
        margin-bottom: 15px;
    }
    
    .speaker-photo {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* --- 6. CONTACTS (LABEL) --- */
    .contact-frame {
        border: var(--border-thick);
        padding: 40px;
        background: white;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

</style>

<!-- 1. HERO SECTION -->
<section class="hero-main">
    <h1 class="hero-title">PRAWODAR</h1>
    <p class="hero-subtitle">
        ОТКРЫТЫЙ ЛЕКТОРИЙ И ПРОСТРАНСТВО ДЛЯ СОБЫТИЙ<br>
        Слушай экспертов, учись новому или проведи свою лекцию у нас
    </p>
    <div class="mt-4">
        <a href="#events" class="btn-hero btn-hero-white">Ближайшие события</a>
        <a href="/Rent/Index" class="btn-hero">Организаторам</a>
    </div>
</section>

<!-- 2. EVENTS (АФИША) -->
<section id="events" class="py-5">
    <div class="container py-4">
        <h2 class="section-title">Афиша Мероприятий</h2>

        <div class="row g-4">
            @if (Model.UpcomingEvents.Any())
            {
                foreach (var item in Model.UpcomingEvents)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="event-card">
                            <span class="event-date-badge">@item.StartDate.ToString("dd.MM").ToUpper()</span>
                            
                            <div class="event-thumb">
                                <a asp-page="/Events/Details" asp-route-id="@item.Id">
                                    <!-- Заглушка, если фото нет -->
                                    <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/default-event.jpg" : item.ImageUrl)" 
                                         alt="@item.Title"
                                         onerror="this.onerror=null;this.src='/images/default-event.jpg';">
                                </a>
                            </div>
                            
                            <h5 class="event-title">
                                <a asp-page="/Events/Details" asp-route-id="@item.Id" class="text-decoration-none text-dark">
                                    @item.Title
                                </a>
                            </h5>
                            
                            <div class="event-meta">
                                <span><i class="bi bi-clock"></i> @item.StartDate.ToString("HH:mm")</span>
                                <span><i class="bi bi-tag-fill"></i> @((int)item.Price) BYN</span>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="text-center mt-5">
            <a asp-page="/Events/Index" class="btn-hero">Смотреть всё расписание</a>
        </div>
    </div>
</section>

<!-- 3. RENT (ВОЗМОЖНОСТИ) - ТЕМНАЯ СЕКЦИЯ -->
<section id="rent" class="bg-dark-custom">
    <div class="container">
        <h2 class="section-title text-white" style="border-bottom: 3px solid var(--color-gold);">Возможности Пространства</h2>
        
        <div class="row g-4">
            <div class="col-md-6">
                <a href="#events" class="info-card">
                    <img src="https://images.unsplash.com/photo-1524178232363-1fb2b075b655?q=80&w=1000&auto=format&fit=crop" alt="Слушатели">
                    <div class="info-content">
                        <h4 class="info-title">Стать гостем</h4>
                        <p class="info-desc">Приходите за знаниями. У нас выступают ученые, предприниматели, путешественники и творческие люди.</p>
                        <div class="mt-3 text-white fw-bold text-uppercase small" style="border-bottom:2px solid var(--color-gold);">Смотреть афишу &rarr;</div>
                    </div>
                </a>
            </div>
            <div class="col-md-6">
                <a href="/Rent/Index" class="info-card">
                    <img src="https://images.unsplash.com/photo-1475721027767-4d529c145753?q=80&w=1000&auto=format&fit=crop" alt="Аренда">
                    <div class="info-content">
                        <h4 class="info-title">Провести событие</h4>
                        <p class="info-desc">Ищете место для лекции или мастер-класса? Арендуйте наш зал. Мы предоставим оборудование.</p>
                        <div class="mt-3 text-white fw-bold text-uppercase small" style="border-bottom:2px solid var(--color-gold);">Условия аренды &rarr;</div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- 4. FEATURES (О ПЛОЩАДКЕ) -->
<section class="py-5">
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center mb-5">
                <h2 class="section-title mb-3">О ПЛОЩАДКЕ</h2>
                <p class="text-muted" style="font-size:1.1rem;">
                    PRAWODAR — это современный зал-трансформер в историческом центре, подходящий для любого формата.
                </p>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-3">
                <div class="feature-box">
                    <div class="feature-icon"><i class="bi bi-mic"></i></div>
                    <h5 class="feature-title">Проф. Звук</h5>
                    <p class="feature-text">Радиомикрофоны, микшерный пульт и акустика для чистого звучания.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box">
                    <div class="feature-icon"><i class="bi bi-projector"></i></div>
