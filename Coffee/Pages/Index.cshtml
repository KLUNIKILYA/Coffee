@page
@model IndexModel
@{
    ViewData["Title"] = "Главная - EventSpace";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap" rel="stylesheet">


<section class="hero-main">
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <h1 class="hero-title">PRAWODAR</h1>
        <p class="hero-subtitle">
            ОТКРЫТЫЙ ЛЕКТОРИЙ И ПРОСТРАНСТВО ДЛЯ СОБЫТИЙ<br>
            Слушай экспертов, учись новому или проведи свою лекцию у нас
        </p>
        <div class="mt-4">
            <a href="#events" class="btn-hero btn-hero-white">Ближайшие события</a>
            <a href="/Rent/Index" class="btn-hero btn-hero-outline">Организаторам</a>
        </div>
    </div>
</section>

<section id="events" class="py-5">
    <div class="container py-4">
        <h2 class="section-title">Афиша Мероприятий</h2>

        <div class="row">
            @if (Model.UpcomingEvents.Any())
            {
                foreach (var item in Model.UpcomingEvents)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="event-card">
                            <div class="event-thumb">
                                <span class="event-date-badge">@item.StartDate.ToString("dd.MM")</span>
                                <a asp-page="/Events/Details" asp-route-id="@item.Id">
                                    <img src="@item.ImageUrl" alt="@item.Title">
                                </a>
                            </div>
                            <h5 class="event-title">
                                <a asp-page="/Events/Details" asp-route-id="@item.Id" class="text-decoration-none text-dark">
                                    @item.Title
                                </a>
                            </h5>
                            <div class="event-meta">
                                <span><i class="bi bi-clock"></i> @item.StartDate.ToString("HH:mm")</span>
                                <span><i class="bi bi-ticket-perforated"></i> От @((int)item.Price) ₽</span>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-md-6 col-lg-4">
                    <div class="event-card">
                        <div class="event-thumb">
                            <span class="event-date-badge">18 ФЕВ</span>
                            <img src="https://images.unsplash.com/photo-1543269865-cbf427effbad?q=80&w=600" alt="Lecture">
                        </div>
                        <h5 class="event-title">Искусственный интеллект: будущее уже здесь</h5>
                        <div class="event-meta">
                            <span>Лекция / IT</span>
                            <span>19:00</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="event-card">
                        <div class="event-thumb">
                            <span class="event-date-badge">21 ФЕВ</span>
                            <img src="https://images.unsplash.com/photo-1551836022-d5d88e9218df?q=80&w=600" alt="Psychology">
                        </div>
                        <h5 class="event-title">Психология общения: как слышать других</h5>
                        <div class="event-meta">
                            <span>Воркшоп</span>
                            <span>14:00</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="event-card">
                        <div class="event-thumb">
                            <span class="event-date-badge">25 ФЕВ</span>
                            <img src="https://images.unsplash.com/photo-1556761175-5973dc0f32e7?q=80&w=600" alt="Business">
                        </div>
                        <h5 class="event-title">Личный бренд в 2026 году</h5>
                        <div class="event-meta">
                            <span>Мастер-класс</span>
                            <span>18:30</span>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-5">
            <a asp-page="/Events/Index" class="btn btn-outline-dark rounded-pill px-5 py-3 text-uppercase" style="letter-spacing: 0.1em;">Смотреть всё расписание</a>
        </div>
    </div>
</section>

<section id="rent" class="py-5 bg-white">
    <div class="container py-4">
        <h2 class="section-title mb-5">Возможности Пространства</h2>
        <div class="row g-4">
            <div class="col-md-6">
                <a href="#events" class="info-card">
                    <img src="https://images.unsplash.com/photo-1524178232363-1fb2b075b655?q=80&w=1000&auto=format&fit=crop" alt="Слушатели">
                    <div class="info-overlay"></div>
                    <div class="info-content">
                        <h4 class="info-title">Стать гостем</h4>
                        <p class="info-desc">Приходите за знаниями. У нас выступают ученые, предприниматели, путешественники и творческие люди. Живое общение и кофе-брейки.</p>
                        <div class="mt-3 text-white fw-bold text-uppercase small">Смотреть афишу &rarr;</div>
                    </div>
                </a>
            </div>
            <div class="col-md-6">
                <a href="#" class="info-card">
                    <img src="https://images.unsplash.com/photo-1475721027767-4d529c145753?q=80&w=1000&auto=format&fit=crop" alt="Аренда">
                    <div class="info-overlay"></div>
                    <div class="info-content">
                        <h4 class="info-title">Провести событие</h4>
                        <p class="info-desc">Ищете место для лекции, мастер-класса или презентации? Арендуйте наш зал. Мы предоставим оборудование и поможем с организацией.</p>
                        <div class="mt-3 text-white fw-bold text-uppercase small">Условия аренды &rarr;</div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center mb-5">
                <h2 class="section-title mb-3">О ПЛОЩАДКЕ</h2>
                <p class="text-muted">PRAWODAR — это современный зал-трансформер в историческом центре, подходящий для любого формата: от камерных лекций до громких презентаций.</p>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-3">
                <div class="feature-box">
                    <div class="feature-icon"><i class="bi bi-mic"></i></div>
                    <h5 class="feature-title">Проф. Звук</h5>
                    <p class="feature-text">Радиомикрофоны, микшерный пульт и акустика для чистого звучания голоса спикера.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box">
                    <div class="feature-icon"><i class="bi bi-projector"></i></div>
                    <h5 class="feature-title">Видео и Свет</h5>
                    <p class="feature-text">Проектор 4K, большой экран и настраиваемое освещение для создания нужной атмосферы.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box">
                    <div class="feature-icon"><i class="bi bi-geo-alt"></i></div>
                    <h5 class="feature-title">Центр Города</h5>
                    <p class="feature-text">5 минут от метро. Удобная парковка для гостей и отдельный вход.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box">
                    <div class="feature-icon"><i class="bi bi-people"></i></div>
                    <h5 class="feature-title">Вместимость</h5>
                    <p class="feature-text">Комфортная посадка до 50 человек. Возможность трансформации зала под фуршет.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-white">
    <div class="container">
        <h2 class="section-title mb-5 text-center" style="font-family: 'Playfair Display', serif;">Наши спикеры</h2>

        @if (Model.TopLecturers != null && Model.TopLecturers.Any())
        {
            <div class="row g-4 justify-content-center">
                @foreach (var lecturer in Model.TopLecturers)
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="speaker-card text-center h-100">
                            <a asp-page="/Lecturers/Details" asp-route-id="@lecturer.Id" class="text-decoration-none">

                                <div class="speaker-img-container mb-3 mx-auto">
                                    <img src="@(string.IsNullOrEmpty(lecturer.PhotoUrl) ? "https://via.placeholder.com/300" : lecturer.PhotoUrl)"
                                         class="speaker-photo"
                                         alt="@lecturer.FullName">
                                </div>

                                <h5 class="serif-font mb-1 text-dark">@lecturer.FullName</h5>
                            </a>

                            <small class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem;">Спикер</small>

                            <p class="mt-3 text-secondary small">
                                @if (!string.IsNullOrEmpty(lecturer.Bio))
                                {
                                    @(lecturer.Bio.Length > 80 ? lecturer.Bio.Substring(0, 80) + "..." : lecturer.Bio)
                                }
                            </p>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-center text-muted">Список спикеров пока пуст.</p>
        }
    </div>
</section>

