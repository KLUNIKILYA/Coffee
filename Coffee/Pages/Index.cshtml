                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box">
                    <div class="feature-icon"><i class="bi bi-people"></i></div>
                    <h5 class="feature-title">Вместимость</h5>
                    <p class="feature-text">Комфортная посадка до 50 человек. Зал-трансформер.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- 5. SPEAKERS (СПИКЕРЫ) -->
<section class="py-5" style="background-color: #f9f9f9;">
    <div class="container">
        <h2 class="section-title">Наши спикеры</h2>

        @if (Model.TopLecturers != null && Model.TopLecturers.Any())
        {
            <div class="row g-4 justify-content-center">
                @foreach (var lecturer in Model.TopLecturers)
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="speaker-card h-100">
                            <a asp-page="/Lecturers/Details" asp-route-id="@lecturer.Id" class="text-decoration-none">
                                <div class="speaker-img-container">
                                    <img src="@(string.IsNullOrEmpty(lecturer.PhotoUrl) ? "/images/default-avatar.jpg" : lecturer.PhotoUrl)"
                                         class="speaker-photo"
                                         alt="@lecturer.FullName"
                                         onerror="this.onerror=null;this.src='/images/default-avatar.jpg';">
                                </div>
                                <h5 class="serif-font mb-1 text-dark" style="font-family:'Oswald', sans-serif; text-transform:uppercase;">@lecturer.FullName</h5>
                            </a>
                            <small class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem; letter-spacing:0.1em;">Спикер</small>
                            <p class="mt-3 text-secondary small">
                                @if (!string.IsNullOrEmpty(lecturer.Bio))
                                {
                                    @(lecturer.Bio.Length > 80 ? lecturer.Bio.Substring(0, 80) + "..." : lecturer.Bio)
                                }
                            </p>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-center text-muted">Список спикеров пока пуст.</p>
        }
    </div>
</section>

