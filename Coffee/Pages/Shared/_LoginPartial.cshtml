@using Microsoft.AspNetCore.Identity
@using Coffee.Core.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<style>
    /* СТИЛИ ДЛЯ КНОПОК ВХОДА (ЧЕРНЫЕ) */
    .btn-auth-black {
        font-family: 'Oswald', sans-serif;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.05em;
        color: #111 !important; /* Черный текст */
        border: 2px solid #111 !important; /* Черная рамка */
        background: transparent;
        padding: 6px 18px;
        text-decoration: none;
        transition: 0.3s;
        display: inline-block;
        font-weight: 600;
        margin-left: 10px;
    }

        .btn-auth-black:hover {
            background: #111 !important;
            color: #fff !important;
        }

    /* ИМЯ ЮЗЕРА */
    .user-name-link {
        font-family: 'Oswald', sans-serif;
        color: #111 !important;
        text-transform: uppercase;
        font-weight: 700;
        text-decoration: none;
        letter-spacing: 0.05em;
        margin-right: 10px;
    }

    /* Дропдаун меню */
    .dropdown-menu-industrial {
        border: 3px solid #111;
        border-radius: 0;
        margin-top: 10px;
        box-shadow: 5px 5px 0px #cfaa65;
    }

    .dropdown-item-industrial {
        font-family: 'Montserrat', sans-serif;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.8rem;
        padding: 10px 20px;
        color: #111;
    }

        .dropdown-item-industrial:hover {
            background: #111;
            color: #fff;
        }
</style>

<ul class="navbar-nav align-items-center flex-row">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        var name = user?.FirstName ?? User.Identity?.Name ?? "User";

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle user-name-link" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-person-circle"></i> @name
            </a>
            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-industrial" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item dropdown-item-industrial" asp-area="" asp-page="/Cabinet/Index">Кабинет</a></li>
                <li><a class="dropdown-item dropdown-item-industrial" asp-area="" asp-page="/Cabinet/MyTickets">Билеты</a></li>

                @if (User.IsInRole("Admin"))
                {
                    <li><hr class="dropdown-divider" style="border-color:#111;"></li>
                    <li><a class="dropdown-item dropdown-item-industrial text-danger" asp-area="Admin" asp-page="/Events/Index">Админка</a></li>
                }

                <li><hr class="dropdown-divider" style="border-color:#111;"></li>
                <li>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })">
                        <button type="submit" class="dropdown-item dropdown-item-industrial">Выход</button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn-auth-black" asp-area="Identity" asp-page="/Account/Login">Вход</a>
        </li>
        <li class="nav-item">
            <a class="btn-auth-black" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
        </li>
    }
</ul>