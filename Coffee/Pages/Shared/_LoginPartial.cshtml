@using Microsoft.AspNetCore.Identity
@using Coffee.Core.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!-- Небольшие стили специально для этого меню, чтобы переопределить белый фон Bootstrap -->
<style>
    .dropdown-menu-dark-custom {
        background-color: #1f1f1f;
        border: 1px solid #333;
    }
        .dropdown-menu-dark-custom .dropdown-item {
            color: #e0e0e0;
            transition: 0.2s;
        }

            .dropdown-menu-dark-custom .dropdown-item:hover {
                background-color: #333; /* Чуть светлее фон при наведении */
                color: #fff;
            }
            .dropdown-menu-dark-custom .dropdown-item.text-danger:hover {
                background-color: rgba(220, 53, 69, 0.2); /* Красная подсветка */
                color: #ff6b6b;
            }
</style>

<ul class="navbar-nav align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        var name = user?.FirstName ?? User.Identity?.Name ?? "Admin";

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white fw-bold text-uppercase" href="#" data-bs-toggle="dropdown" style="font-size: 0.85rem; letter-spacing: 0.05em;">
                <i class="bi bi-person-circle me-2"></i>@name
            </a>

            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark-custom shadow mt-2 p-2" style="border-radius: 8px;">

                <li>
                    <a class="dropdown-item py-2 rounded" asp-area="" asp-page="/Cabinet/Index">
                        <i class="bi bi-grid-fill me-2 text-secondary"></i> Кабинет
                    </a>
                </li>
                <li>
                    <a class="dropdown-item py-2 rounded" asp-area="" asp-page="/Cabinet/Tickets">
                        <i class="bi bi-ticket-perforated-fill me-2 text-secondary"></i> Мои билеты
                    </a>
                </li>
                <li>
                    <a class="dropdown-item py-2 rounded" asp-area="" asp-page="/Cabinet/Waitlist">
                        <i class="bi bi-hourglass-split me-2 text-secondary"></i> Лист ожидания
                    </a>
                </li>

                <li><hr class="dropdown-divider bg-secondary opacity-25 my-2"></li>

                <li>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })">
                        <button type="submit" class="dropdown-item text-danger py-2 rounded">
                            <i class="bi bi-box-arrow-right me-2"></i> Выйти
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-outline-light btn-sm rounded-pill px-3 mx-1 text-uppercase" style="font-size: 0.75rem; letter-spacing: 0.05em;" asp-area="Identity" asp-page="/Account/Login">
                Вход
            </a>
        </li>
        <li class="nav-item">
            <a class="btn btn-outline-light btn-sm rounded-pill px-3 mx-1 text-uppercase" style="font-size: 0.75rem; letter-spacing: 0.05em;" asp-area="Identity" asp-page="/Account/Register">
                Регистрация
            </a>
        </li>
    }
</ul>