<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventSpace</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;700&family=Playfair+Display:wght@500&display=swap" rel="stylesheet">

    <style>
        /* Переменные из основного стиля сайта */
        :root {
            --bg-beige: #f9f7f2;
            --text-dark: #2c2c2c;
        }

        body {
            /* ВОТ ГЛАВНОЕ ИЗМЕНЕНИЕ: наш фирменный бежевый фон */
            background-color: var(--bg-beige);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Manrope', sans-serif;
        }

        /* Карточка по центру */
        .auth-card {
            border: 1px solid #eee; /* Легкая рамка */
            border-radius: 4px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05); /* Мягкая тень */
            background: white;
            width: 100%;
            max-width: 420px;
        }

        .auth-header {
            text-align: center;
            padding: 40px 40px 0;
        }

        .auth-body {
            padding: 20px 40px 40px;
        }

        .auth-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.2rem;
            color: var(--text-dark);
        }
    </style>
</head>
<body>

    <main class="auth-card">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>