<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventSpace</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600&family=Playfair+Display:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Coffee.styles.css" asp-append-version="true" />

    <style>
        :root {
            --color-gold: #cfaa65;
            --color-black: #111111;
            --color-white: #ffffff;
            --border-thick: 3px solid var(--color-black);
            --border-thin: 1px solid var(--color-black);
        }

        body {
            background-color: var(--color-white);
            font-family: 'Montserrat', sans-serif;
            color: var(--color-black);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* --- HEADER (INDUSTRIAL WHITE) --- */
        .site-header {
            background-color: var(--color-white);
            color: var(--color-black);
            border-bottom: var(--border-thick);
            padding: 15px 0;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        /* Логотип */
        .brand-logo {
            font-family: 'Oswald', sans-serif;
            font-size: 2rem;
            font-weight: 700;
            color: #111 !important; /* <--- ЧЕРНЫЙ ЦВЕТ ОБЯЗАТЕЛЬНО */
            text-decoration: none;
            letter-spacing: 0.05em;
            text-transform: uppercase;
            line-height: 1;
            border: 3px solid #111; /* Черная рамка */
            padding: 5px 15px;
            display: inline-block;
            transition: 0.3s;
        }

            .brand-logo:hover {
                background: var(--color-black);
                color: var(--color-white);
            }

        /* Навигация */
        .nav-link-custom {
            font-family: 'Oswald', sans-serif;
            color: #111 !important; /* <--- ДОБАВЬ !important ЧТОБЫ БЫЛО ЧЕРНЫМ */
            text-decoration: none;
            text-transform: uppercase;
            font-size: 0.9rem; /* Чуть уменьшил, а то было крупно */
            letter-spacing: 0.1em;
            margin-left: 30px;
            font-weight: 600; /* Сделал жирнее */
            transition: 0.3s;
            position: relative;
        }

            .nav-link-custom::after {
                content: '';
                display: block;
                width: 0;
                height: 2px;
                background: var(--color-black);
                transition: width .3s;
                position: absolute;
                bottom: -5px;
            }

            .nav-link-custom:hover::after, .nav-link-custom.active::after {
                width: 100%;
            }

            .nav-link-custom:hover {
                color: var(--color-black);
            }

        /* --- FOOTER (INDUSTRIAL BLACK) --- */
        .site-footer {
            background-color: var(--color-black);
            color: #ccc;
            font-family: 'Montserrat', sans-serif;
            padding-top: 60px;
            padding-bottom: 30px;
            margin-top: auto;
            border-top: 5px solid var(--color-gold);
        }

        .footer-logo {
            font-family: 'Oswald', sans-serif;
            font-size: 2rem;
            color: var(--color-white);
            font-weight: 700;
            margin-bottom: 20px;
            display: inline-block;
            border: 2px solid var(--color-white);
            padding: 5px 15px;
        }

        .footer-title {
            color: var(--color-gold);
            font-family: 'Oswald', sans-serif;
            font-size: 1.1rem;
            margin-bottom: 1.5rem;
            letter-spacing: 0.1em;
            text-transform: uppercase;
            font-weight: 600;
        }

        .footer-link {
            color: #999;
            text-decoration: none;
            transition: 0.3s;
            display: block;
            margin-bottom: 8px;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

            .footer-link:hover {
                color: var(--color-white);
                padding-left: 5px;
            }

        .social-circle {
            width: 40px;
            height: 40px;
            border: 1px solid #555;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: var(--color-white);
            margin-right: 10px;
            transition: 0.3s;
            text-decoration: none;
        }

            .social-circle:hover {
                background: var(--color-gold);
                border-color: var(--color-gold);
                color: var(--color-black);
            }

    </style>
</head>
<body>
    <header class="site-header">
        <div class="container header-container">
            <!-- Логотип -->
            <a asp-page="/Index" class="brand-logo">
                PRAWODAR
            </a>

            <!-- Десктоп Меню -->
            <nav class="d-none d-lg-flex align-items-center">
                <a class="nav-link-custom" asp-page="/Index">Главная</a>
                <a class="nav-link-custom" asp-page="/Events/Index">Афиша</a>
                <a class="nav-link-custom" asp-page="/Rent/Index">Аренда</a>
                <a class="nav-link-custom" asp-page="/Contacts/Contacts">Контакты</a>

                <!-- Логин и Админка (встроены в Partial) -->
                <div class="ms-4 border-start border-dark ps-4 d-flex align-items-center">
                    <partial name="_LoginPartial" />
                </div>
            </nav>

            <!-- Мобильное Меню Кнопка -->
            <button class="btn d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileMenu">
                <i class="bi bi-list fs-1 text-dark"></i>
            </button>
        </div>
    </header>

    <!-- Мобильное меню (Offcanvas) -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="mobileMenu" style="font-family: 'Oswald', sans-serif;">
        <div class="offcanvas-header border-bottom border-dark">
            <h5 class="offcanvas-title fw-bold text-uppercase">Меню</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body d-flex flex-column gap-3">
            <a class="fs-4 text-dark text-decoration-none text-uppercase fw-bold" asp-page="/Events/Index">Афиша</a>
            <a class="fs-4 text-dark text-decoration-none text-uppercase fw-bold" asp-page="/Rent/Index">Аренда</a>
            <a class="fs-4 text-dark text-decoration-none text-uppercase fw-bold" asp-page="/Contacts/Contacts">Контакты</a>
            <hr>
            <partial name="_LoginPartial" />
        </div>
    </div>

    <!-- ОСНОВНОЙ КОНТЕНТ (Без лишних контейнеров, чтобы Hero был во всю ширину) -->
    <main role="main">
        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="container">
            <div class="row gy-5">
                <!-- Колонка 1: Лого и инфо -->
                <div class="col-lg-4 col-md-6">
                    <div class="footer-logo">PRAWODAR</div>
                    <p class="mb-4 small text-secondary" style="line-height: 1.6; max-width: 90%;">
                        ОТКРЫТОЕ ПРОСТРАНСТВО ДЛЯ ЛЕКЦИЙ, ВОРКШОПОВ И СОБЫТИЙ. <br>
                        МИНСК, 2026.
                    </p>
                    <div class="d-flex">
                        <a href="#" class="social-circle"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="social-circle"><i class="bi bi-telegram"></i></a>
                    </div>
                </div>

                <!-- Колонка 2: Навигация -->
                <div class="col-lg-2 col-md-6 offset-lg-1">
                    <h5 class="footer-title">Навигация</h5>
                    <a asp-page="/Events/Index" class="footer-link">Афиша</a>
                    <a asp-page="/Rent/Index" class="footer-link">Аренда зала</a>
                    <a href="#" class="footer-link">О нас</a>
                    <a href="#" class="footer-link">Правила</a>
                </div>

                <!-- Колонка 3: Для посетителей -->
                <div class="col-lg-2 col-md-6">
                    <h5 class="footer-title">Инфо</h5>
                    <a href="#" class="footer-link">Возврат билетов</a>
                    <a href="#" class="footer-link">Как добраться</a>
                    <a href="#" class="footer-link">FAQ</a>
                </div>

                <!-- Колонка 4: Контакты -->
                <div class="col-lg-3 col-md-6">
                    <h5 class="footer-title">Контакты</h5>
                    <p class="mb-2 text-white font-monospace small"><i class="bi bi-geo-alt me-2 text-warning"></i> УЛ. ПУШКИНА, 100</p>
                    <p class="mb-2 text-white font-monospace small"><i class="bi bi-telephone me-2 text-warning"></i> +375 (29) 123-45-67</p>
                    <p class="mb-0"><a href="mailto:hello@prawodar.by" class="footer-link m-0" style="text-transform:lowercase;">hello@prawodar.by</a></p>
                </div>

            </div>

            <div class="border-top border-secondary mt-5 pt-4">
                <div class="row align-items-center">
                    <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                        <span class="small text-secondary font-monospace">© @DateTime.Now.Year PRAWODAR. ALL RIGHTS RESERVED.</span>
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <span class="small text-secondary font-monospace">DESIGNED FOR COFFEE LOVERS</span>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>