@page
@model Coffee.Pages.Cabinet.MyTicketsModel
@{
    ViewData["Title"] = "Мои билеты";
}

<style>
    .ticket-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        display: flex;
        overflow: hidden;
        margin-bottom: 30px;
        transition: 0.3s;
        border: 1px solid #eee;
        position: relative;
    }

        .ticket-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.1);
        }

    .ticket-visual {
        width: 180px;
        background-color: #f8f9fa;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        border-right: 2px dashed #ddd;
        position: relative;
        padding: 20px;
        text-align: center;
    }

        .ticket-visual::before, .ticket-visual::after {
            content: '';
            position: absolute;
            right: -10px;
            width: 20px;
            height: 20px;
            background-color: var(--bg-beige);
            border-radius: 50%;
        }

        .ticket-visual::before {
            top: -10px;
        }

        .ticket-visual::after {
            bottom: -10px;
        }

    .ticket-date-day {
        font-family: 'Oswald', sans-serif;
        font-size: 2.5rem;
        line-height: 1;
        color: var(--color-black);
    }

    .ticket-date-month {
        font-family: 'Montserrat', sans-serif;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-size: 0.9rem;
        color: #888;
    }

    .ticket-info {
        flex-grow: 1;
        padding: 25px 30px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .ticket-title {
        font-family: 'Playfair Display', serif;
        font-size: 1.5rem;
        margin-bottom: 10px;
        color: var(--color-black);
    }

    .ticket-meta {
        font-size: 0.9rem;
        color: #666;
        display: flex;
        gap: 20px;
        font-family: 'Montserrat', sans-serif;
    }

        .ticket-meta i {
            color: var(--color-gold);
        }

    .ticket-action {
        width: 150px;
        padding: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        border-left: 1px solid #f0f0f0;
    }

    .fake-qr {
        font-size: 3rem;
        color: var(--color-black);
        opacity: 0.8;
        line-height: 1;
        margin-bottom: 10px;
    }

    .ticket-id {
        font-family: 'Courier New', monospace;
        font-size: 0.7rem;
        color: #999;
        margin-bottom: 10px;
    }

    .ticket-card.past {
        opacity: 0.6;
        filter: grayscale(100%);
    }

        .ticket-card.past:hover {
            transform: none;
            box-shadow: none;
        }

    .nav-tabs-custom .nav-link {
        color: #888;
        font-family: 'Montserrat', sans-serif;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-size: 0.9rem;
        border: none;
        border-bottom: 3px solid transparent;
        padding-bottom: 10px;
    }

        .nav-tabs-custom .nav-link.active {
            color: var(--color-black);
            border-bottom-color: var(--color-gold);
            font-weight: 600;
            background: none;
        }

</style>

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-end mb-5">
        <h1 style="font-family: 'Oswald', sans-serif; text-transform: uppercase;">Мои Билеты</h1>

        <ul class="nav nav-tabs-custom" id="myTab" role="tablist">
            <li class="nav-item">
                <button class="nav-link active" id="active-tab" data-bs-toggle="tab" data-bs-target="#active" type="button">Активные</button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="history-tab" data-bs-toggle="tab" data-bs-target="#history" type="button">История</button>
            </li>
        </ul>
    </div>

    <div class="tab-content" id="myTabContent">

        <div class="tab-pane fade show active" id="active" role="tabpanel">
            @if (Model.ActiveTickets.Any())
            {
                @foreach (var ticket in Model.ActiveTickets)
                {
                    <div class="ticket-card">
                        <div class="ticket-visual">
                            <div class="ticket-date-day">@ticket.StartDate.ToString("dd")</div>
                            <div class="ticket-date-month">@ticket.StartDate.ToString("MMM").ToUpper()</div>
                            <div class="small text-muted mt-2">@ticket.StartDate.ToString("HH:mm")</div>
                        </div>

                        <div class="ticket-info">
                            <h3 class="ticket-title">@ticket.EventTitle</h3>
                            <div class="ticket-meta">
                                <span><i class="bi bi-geo-alt-fill"></i> @ticket.Location</span>
                                <span><i class="bi bi-tag-fill"></i> @((int)ticket.Price) BYN</span>
                            </div>
                        </div>

                        <div class="ticket-action">
                            <i class="bi bi-qr-code fake-qr"></i>
                            <div class="ticket-id">#@ticket.Id.ToString("D6")</div>
                            <a href="#" class="btn btn-sm btn-outline-dark rounded-0 w-100">Скачать</a>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-ticket-perforated" style="font-size: 4rem; color: #ddd;"></i>
                    <p class="mt-3 text-muted">У вас пока нет активных билетов</p>
                    <a href="/Events/Index" class="btn btn-dark rounded-0 text-uppercase mt-2">Перейти к афише</a>
                </div>
            }
        </div>

        <div class="tab-pane fade" id="history" role="tabpanel">
            @if (Model.PastTickets.Any())
            {
                @foreach (var ticket in Model.PastTickets)
                {
                    <div class="ticket-card past">
                        <div class="ticket-visual">
                            <div class="ticket-date-day">@ticket.StartDate.ToString("dd")</div>
                            <div class="ticket-date-month">@ticket.StartDate.ToString("MMM").ToUpper()</div>
                        </div>
                        <div class="ticket-info">
                            <h3 class="ticket-title">@ticket.EventTitle</h3>
                            <div class="ticket-meta">
                                <span>Мероприятие завершено</span>
                            </div>
                        </div>
                        <div class="ticket-action">
                            <div class="text-muted small text-uppercase">Архив</div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted mt-4">История посещений пуста.</p>
            }
        </div>
    </div>
</div>