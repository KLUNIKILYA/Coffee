@page
@model Coffee.Pages.Cabinet.IndexModel
@{
    ViewData["Title"] = "Личный кабинет";
}

<div class="container py-5">

    <div class="row g-4 justify-content-center">

        <!-- ЛЕВАЯ КОЛОНКА: КАРТА И ПРОФИЛЬ -->
        <div class="col-lg-5 col-md-6">

            <!-- Визуальная Клубная Карта -->
            <div class="member-card mb-4">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="card-label">PRAWODAR CLUB</div>
                        <h2 class="user-name-premium">@Model.CurrentUser.FirstName</h2>
                        <h2 class="user-name-premium" style="font-size: 1.5rem; color:white;">@Model.CurrentUser.LastName</h2>
                    </div>
                    <i class="bi bi-star-fill text-warning"></i>
                </div>

                <div>
                    <div class="card-label" style="font-size:0.6rem;">MEMBER ID</div>
                    <div class="card-number">
                        •••• •••• •••• @Model.CurrentUser.Id.Substring(0, 4).ToUpper()
                    </div>
                </div>
            </div>

            <!-- Блок с email и выходом -->
            <div class="text-center">
                <p class="text-muted mb-3">@Model.CurrentUser.Email</p>
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })">
                    <button type="submit" class="btn btn-link text-danger text-decoration-none text-uppercase fw-bold" style="font-size: 0.8rem; letter-spacing: 0.1em;">
                        Выйти из аккаунта
                    </button>
                </form>
            </div>
        </div>

        <!-- ПРАВАЯ КОЛОНКА: МЕНЮ И ИНФО -->
        <div class="col-lg-6 col-md-6">

            <!-- Статистика (в одну строку) -->
            <div class="row g-3 mb-4">
                <div class="col-6">
                    <div class="stat-card">
                        <div class="stat-number">0</div>
                        <div class="stat-text">Активных билетов</div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="stat-card">
                        <div class="stat-number">0</div>
                        <div class="stat-text">Посещено лекций</div>
                    </div>
                </div>
            </div>

            <!-- Меню навигации -->
            <div class="menu-list">
                <h6 class="ps-3 mt-2 mb-3 text-muted text-uppercase small fw-bold">Меню</h6>

                <a asp-page="/Cabinet/MyTickets" class="menu-item">
                    <div class="menu-icon-box"><i class="bi bi-ticket-perforated"></i></div>
                    <div>
                        <div>Мои билеты</div>
                        <div class="small text-muted">Ваши проходки на мероприятия</div>
                    </div>
                    <i class="bi bi-chevron-right ms-auto text-muted small"></i>
                </a>

                <a asp-page="/Cabinet/Waitlist" class="menu-item">
                    <div class="menu-icon-box"><i class="bi bi-hourglass"></i></div>
                    <div>
                        <div>Лист ожидания</div>
                        <div class="small text-muted">События, которые вы ждете</div>
                    </div>
                    <i class="bi bi-chevron-right ms-auto text-muted small"></i>
                </a>

                <a asp-area="Identity" asp-page="/Account/Manage/Index" class="menu-item">
                    <div class="menu-icon-box"><i class="bi bi-person-gear"></i></div>
                    <div>
                        <div>Настройки профиля</div>
                        <div class="small text-muted">Сменить пароль или имя</div>
                    </div>
                    <i class="bi bi-chevron-right ms-auto text-muted small"></i>
                </a>

                @if (User.IsInRole("Admin"))
                {
                    <a asp-area="Admin" asp-page="/Events/Index" class="menu-item mt-2" style="background-color: #fff5f5;">
                        <div class="menu-icon-box" style="background-color: #ffebeb; color: #e74c3c;"><i class="bi bi-shield-lock"></i></div>
                        <div>
                            <div class="text-danger fw-bold">Администратор</div>
                            <div class="small text-muted">Управление сайтом</div>
                        </div>
                        <i class="bi bi-chevron-right ms-auto text-muted small"></i>
                    </a>
                }
            </div>

        </div>
    </div>
</div>