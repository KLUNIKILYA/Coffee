@page "{id:int}"
@model Coffee.Pages.Events.DetailsModel
@{
    // Если картинки нет, используем заглушку
    var eventImageUrl = string.IsNullOrEmpty(Model.Event.ImageUrl)
        ? "https://images.unsplash.com/photo-1551836022-d5d88e9218df?q=80&w=2000"
        : Model.Event.ImageUrl;

    ViewData["Title"] = Model.Event.Title;
}

<style>
    :root {
        --bg-beige: #f9f7f2;
        --text-dark: #2c2c2c;
        --accent-gold: #c6a87c;
        --brand-blue: #3498db;
    }

    /* 1. HERO-СЕКЦИЯ */
    .event-hero {
        position: relative;
        height: 60vh;
        min-height: 450px;
        background-size: cover;
        background-position: center;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        /* Затемнение через градиент прямо здесь, чтобы не плодить псевдоэлементы если не хочется */
        background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.7)), url('@eventImageUrl');
    }

    .hero-content {
        position: relative;
        z-index: 2;
        max-width: 900px;
        padding: 20px;
    }

    .event-category-tag {
        background: rgba(255,255,255,0.15);
        backdrop-filter: blur(5px);
        padding: 8px 20px;
        border-radius: 30px;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 25px;
        display: inline-block;
        border: 1px solid rgba(255,255,255,0.3);
    }

    .event-hero-title {
        font-family: 'Playfair Display', serif;
        font-size: 3.5rem;
        text-shadow: 0 4px 20px rgba(0,0,0,0.6);
        margin-bottom: 30px;
        line-height: 1.1;
    }

    .event-key-info {
        display: flex;
        justify-content: center;
        gap: 40px;
        font-family: 'Manrope', sans-serif;
        font-size: 1.1rem;
        flex-wrap: wrap;
    }

    .info-item i {
        margin-right: 10px;
        color: var(--accent-gold);
    }

    /* 2. ОСНОВНОЙ КОНТЕНТ */
    .event-content-section {
        background-color: var(--bg-beige);
        padding: 5rem 0;
    }

    .event-description {
        font-family: 'Manrope', sans-serif;
        font-size: 1.1rem;
        color: #444;
        line-height: 1.8;
        white-space: pre-line; /* Сохраняет переносы строк из БД */
    }

        .event-description h2 {
            font-family: 'Playfair Display', serif;
            margin-top: 2rem;
            margin-bottom: 1rem;
            color: var(--text-dark);
        }

    /* Виджет покупки */
    .ticket-widget {
        background: white;
        padding: 40px 30px;
        border-radius: 4px; /* Более строгий стиль */
        box-shadow: 0 20px 50px rgba(0,0,0,0.08);
        position: sticky;
        top: 100px;
        border: 1px solid #eee;
    }

    .price-display {
        font-family: 'Playfair Display', serif;
        font-size: 3rem;
        color: var(--text-dark);
        margin-bottom: 5px;
        line-height: 1;
    }

    .price-label {
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: #999;
        margin-bottom: 25px;
        display: block;
    }

    .btn-buy-ticket {
        background-color: var(--text-dark); /* Черная кнопка */
        color: white !important;
        border: none;
        border-radius: 4px;
        padding: 18px;
        text-align: center;
        font-weight: 700;
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        width: 100%;
        display: block;
        transition: 0.3s;
        text-decoration: none;
    }

        .btn-buy-ticket:hover {
            background-color: var(--accent-red); /* Красный при наведении */
            transform: translateY(-2px);
        }

    .places-left {
        margin-top: 15px;
        text-align: center;
        font-size: 0.9rem;
        color: #666;
    }

        .places-left strong {
            color: var(--accent-gold);
        }

    /* 3. СПИКЕР */
    .speaker-section {
        padding: 5rem 0;
        background-color: white;
        border-top: 1px solid #eee;
    }

    .speaker-photo {
        width: 200px;
        height: 200px;
        object-fit: cover;
        border-radius: 50%;
        margin-bottom: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .speaker-name {
        font-family: 'Playfair Display', serif;
        font-size: 2.2rem;
        margin-bottom: 5px;
    }

    .speaker-title {
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-size: 0.85rem;
        color: #999;
        margin-bottom: 20px;
    }

    .speaker-bio {
        color: #555;
        line-height: 1.7;
        margin-bottom: 20px;
    }

    /* Карта */
    .map-section {
        padding: 5rem 0;
        background-color: var(--bg-beige);
    }

    .map-frame {
        filter: grayscale(100%);
        transition: 0.5s;
        border-radius: 4px;
        height: 450px;
        width: 100%;
        border: none;
    }

        .map-frame:hover {
            filter: grayscale(0%);
        }

</style>

<!-- 1. HERO-СЕКЦИЯ -->
<div class="event-hero">
    <div class="hero-content">
        <!-- Если есть категория, можно вывести. Пока статика -->
        <span class="event-category-tag">Мероприятие</span>

        <h1 class="event-hero-title">@Model.Event.Title</h1>

        <div class="event-key-info">
            <span class="info-item">
                <i class="bi bi-calendar-event"></i> @Model.Event.StartDate.ToString("dd MMMM yyyy")
            </span>
            <span class="info-item">
                <i class="bi bi-clock"></i> @Model.Event.StartDate.ToString("HH:mm")
            </span>
            <span class="info-item">
                <i class="bi bi-geo-alt"></i> Минск, пр. Независимости, 10
            </span>
        </div>
    </div>
</div>

<!-- 2. ОСНОВНОЙ КОНТЕНТ -->
<div class="event-content-section">
    <div class="container">
        <div class="row g-lg-5">
            <!-- Левая колонка: Описание -->
            <div class="col-lg-7 mb-5 mb-lg-0">
                <div class="event-description">
                    <h2>О событии</h2>
                    <!-- Вывод описания из БД с сохранением форматирования -->
                    @Model.Event.Description
                </div>
            </div>

            <!-- Правая колонка: Виджет покупки -->
            <div class="col-lg-4 offset-lg-1">
                <div class="ticket-widget">
                    <span class="price-label">Стоимость участия</span>
                    <div class="price-display">@((int)Model.Event.Price) ₽</div>

                    <form method="post" asp-page-handler="Buy">
                        <!-- Пока заглушка -->
                        <div class="mb-4">
                            <label for="ticketCount" class="form-label text-muted small text-uppercase fw-bold">Количество билетов</label>
                            <select id="ticketCount" class="form-select border-0 border-bottom rounded-0 bg-transparent ps-0">
                                <option selected>1</option>
                                <option>2</option>
                                <option>3</option>
                            </select>
                        </div>

                        <a href="#" class="btn-buy-ticket">Купить билет</a>

                        <div class="places-left">
                            Осталось мест: <strong>@(Model.Event.Capacity - Model.Event.PlacesTaken)</strong>
                        </div>
                    </form>

                    <div class="mt-4 pt-4 border-top text-center text-muted small">
                        <i class="bi bi-shield-check me-1"></i> Безопасная оплата картой
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 3. БЛОК СПИКЕРА (Показываем только если лектор задан) -->
@if (Model.Event.Lecturer != null)
{
    <div class="speaker-section">
        <div class="container">
            <div class="row align-items-center justify-content-center text-center text-md-start">
                <div class="col-md-3 text-center mb-4 mb-md-0">
                    <img src="@(string.IsNullOrEmpty(Model.Event.Lecturer.PhotoUrl) ? "https://via.placeholder.com/200" : Model.Event.Lecturer.PhotoUrl)"
                         alt="@Model.Event.Lecturer.FullName"
                         class="speaker-photo">
                </div>
                <div class="col-md-7">
                    <h2 class="speaker-name">@Model.Event.Lecturer.FullName</h2>
                    <p class="speaker-title">Спикер мероприятия</p>

                    <div class="speaker-bio">
                        <!-- Краткое описание лектора (обрезаем если слишком длинное) -->
                        @(Model.Event.Lecturer.Bio?.Length > 300
                                            ? Model.Event.Lecturer.Bio.Substring(0, 300) + "..."
                                            : Model.Event.Lecturer.Bio)
                </div>

                    <a asp-page="/Lecturers/Details" asp-route-id="@Model.Event.Lecturer.Id" class="text-decoration-none text-dark border-bottom border-dark pb-1 fw-bold">
                        Подробнее о спикере
                    </a>
                </div>
            </div>
        </div>
    </div>
}

<!-- 4. КАРТА -->
<div class="map-section">
    <div class="container">
        <div class="text-center mb-5">
            <h2 style="font-family: 'Playfair Display';">Место проведения</h2>
            <p class="text-muted">Ждем вас в нашем пространстве</p>
        </div>
        <div class="row">
            <div class="col-12">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2350.81628178822!2d27.551381312384954!3d53.90013357235227!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x46dbcf956a655555%3A0x464f8992ac771321!2sPalace%20of%20the%20Republic!5e0!3m2!1sen!2sby!4v1703080076236!5m2!1sen!2sby"
                        class="map-frame" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>
</div>