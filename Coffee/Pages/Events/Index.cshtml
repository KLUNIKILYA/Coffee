@page
@model Coffee.Pages.Events.IndexModel
@{
    ViewData["Title"] = "Афиша - EventSpace";
    var today = DateTime.Now;
    // Генерируем даты на 90 дней вперед (3 месяца)
    var daysToShow = 90;
}

<!-- Шрифты (Manrope + Playfair Display) -->
<link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700;800&family=Playfair+Display:wght@400;500;600&display=swap" rel="stylesheet">

<style>
    :root {
        --bg-beige: #f9f7f2;
        --text-dark: #2c2c2c;
        --accent-red: #e74c3c;
        --border-color: #e0e0e0;
    }

    body {
        background-color: var(--bg-beige);
        color: var(--text-dark);
    }

    /* --- ЛЕНТА ДАТ (НОВАЯ ВЕРСИЯ) --- */
    .date-ribbon-wrapper {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 3rem;
        max-width: 1100px; /* Чуть шире */
        margin-left: auto;
        margin-right: auto;
        position: relative;
    }

    /* Кнопки навигации (только стрелки) */
    .nav-arrow-btn {
        width: 50px;
        height: 50px;
        border: 1px solid var(--border-color);
        border-radius: 50%; /* Круглые кнопки */
        background: white;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        color: #2c2c2c;
        font-size: 1.2rem;
        transition: 0.3s;
        flex-shrink: 0;
        z-index: 2;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }

        .nav-arrow-btn:hover {
            background-color: var(--text-dark);
            border-color: var(--text-dark);
            color: white;
        }

    /* Контейнер скролла */
    .dates-scroll-container {
        flex-grow: 1;
        overflow-x: auto;
        white-space: nowrap;
        scrollbar-width: none;
        -ms-overflow-style: none;
        padding: 20px 0;
        display: flex;
        align-items: center;
        gap: 10px; /* Отступ между элементами */
        mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent); /* Размытие краев */
        -webkit-mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent);
    }

        .dates-scroll-container::-webkit-scrollbar {
            display: none;
        }

    /* Элемент даты */
    .date-item {
        display: inline-flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-width: 65px;
        cursor: pointer;
        opacity: 0.4;
        transition: 0.3s;
        user-select: none;
    }

        .date-item:hover {
            opacity: 0.8;
        }

        .date-item.active {
            opacity: 1;
            transform: scale(1.15);
            font-weight: bold;
        }

    .day-name {
        font-family: 'Manrope', sans-serif;
        font-size: 0.85rem;
        color: #888;
        margin-bottom: 6px;
        text-transform: lowercase;
    }

    .day-number {
        font-family: 'Manrope', sans-serif;
        font-size: 2.2rem;
        font-weight: 500;
        color: var(--text-dark);
        line-height: 1;
    }

    /* Выходные */
    .is-weekend .day-name {
        color: var(--accent-red);
    }

    /* РАЗДЕЛИТЕЛЬ МЕСЯЦЕВ */
    .month-separator {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        height: 60px;
        padding: 0 25px;
        border-left: 1px solid #ddd; /* Линия слева */
        margin-left: 10px;
        margin-right: 10px;
    }

    .month-label {
        writing-mode: vertical-rl;
        transform: rotate(180deg);
        font-family: 'Manrope', sans-serif;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        font-size: 0.8rem;
        color: #bbb;
    }


    /* --- КАРТОЧКИ (ИСПРАВЛЕННЫЕ ОТСТУПЫ) --- */
    .afisha-card {
        background: white;
        border: none;
        margin-bottom: 30px;
        transition: 0.3s;
        display: flex;
        flex-direction: column;
        height: 100%; /* Чтобы карточки были одной высоты */
    }

        .afisha-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        }

    .card-img-wrap {
        height: 240px;
        overflow: hidden;
        position: relative;
    }

        .card-img-wrap img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s;
        }

    .afisha-card:hover .card-img-wrap img {
        transform: scale(1.05);
    }

    /* Исправленный padding для контента */
    .card-body-custom {
        padding: 25px 30px; /* Сверху/снизу 25, Слева/Справа 30 - ТЕКСТ НЕ БУДЕТ ПРИЛИПАТЬ */
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .cat-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: #999;
        margin-bottom: 12px;
        display: block;
    }

    .card-title {
        font-family: 'Playfair Display', serif;
        font-size: 1.4rem;
        margin-bottom: 20px;
        line-height: 1.3;
        color: var(--text-dark);
        text-decoration: none;
    }

    .card-footer-custom {
        margin-top: auto; /* Прижимает цену и кнопку к низу */
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        border-top: 1px solid #f0f0f0;
        padding-top: 20px;
    }

    .info-item {
        font-family: 'Manrope', sans-serif;
        font-size: 0.95rem;
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 5px;
    }

    .btn-arrow-link {
        text-decoration: none;
        color: var(--text-dark);
        text-transform: uppercase;
        font-size: 0.8rem;
        font-weight: 600;
        border-bottom: 1px solid #ccc;
        padding-bottom: 3px;
        transition: 0.3s;
        letter-spacing: 0.05em;
    }

        .btn-arrow-link:hover {
            border-color: var(--text-dark);
            color: black;
        }

</style>

<div class="container py-5">

    <!-- Заголовок и поиск -->
    <div class="row align-items-end mb-5">
        <div class="col-md-6 text-center text-md-start">
            <h1 style="font-family: 'Playfair Display'; font-size: 3.5rem;">Афиша</h1>
        </div>
        <div class="col-md-6">
            <form class="d-flex border-bottom border-secondary pb-2 justify-content-between" style="max-width: 400px; margin-left: auto;">
                <input type="text" placeholder="Поиск события..." style="border:none; background:transparent; outline:none; font-family:'Manrope'; width: 100%; color: #333;">
                <button type="submit" style="background:none; border:none;"><i class="bi bi-search" style="font-size: 1.2rem;"></i></button>
            </form>
        </div>
    </div>

    <!-- ЛЕНТА ДАТ (3 МЕСЯЦА) -->
    <div class="date-ribbon-wrapper">
        <!-- Кнопка Влево -->
        <div class="nav-arrow-btn" onclick="scrollDates('left')">
            <i class="bi bi-chevron-left"></i>
        </div>

        <!-- Скролл -->
        <div class="dates-scroll-container" id="datesScroll">
            @for (int i = 0; i < daysToShow; i++)
            {
                var date = today.AddDays(i);
                var isWeekend = date.DayOfWeek == DayOfWeek.Saturday || date.DayOfWeek == DayOfWeek.Sunday;
                var activeClass = i == 0 ? "active" : "";

                // Логика отображения месяца:
                // Показываем название месяца, если это первый день ленты (i==0) ИЛИ если сегодня 1-е число
                if (i == 0 || date.Day == 1)
                {
                    <div class="month-separator">
                        <span class="month-label">@date.ToString("MMM").ToUpper()</span>
                    </div>
                }

                <div class="date-item @(isWeekend ? "is-weekend" : "") @activeClass" onclick="selectDate(this)">
                    <span class="day-name">@date.ToString("ddd")</span>
                    <span class="day-number">@date.ToString("dd")</span>
                </div>
            }
        </div>

        <!-- Кнопка Вправо -->
        <div class="nav-arrow-btn" onclick="scrollDates('right')">
            <i class="bi bi-chevron-right"></i>
        </div>
    </div>

    <!-- СПИСОК СОБЫТИЙ -->
    <div class="row g-4">
        @if (Model.Events != null && Model.Events.Any())
        {
            foreach (var item in Model.Events)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="afisha-card">
                        <div class="card-img-wrap">
                            <img src="@($"https://picsum.photos/seed/{item.Id}/600/400")" alt="@item.Title">
                        </div>
                        <div class="card-body-custom">
                            <span class="cat-label">Лекция</span>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="card-title">@item.Title</a>

                            <div class="card-footer-custom">
                                <div>
                                    <div class="info-item"><i class="bi bi-clock"></i> @item.StartDate.ToString("HH:mm")</div>
                                    <div class="info-item fw-bold mt-2">@((int)item.Price) ₽</div>
                                </div>
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn-arrow-link">
                                    Билет &rarr;
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <!-- ДЕМО ДАННЫЕ -->
            <div class="col-md-6 col-lg-4">
                <div class="afisha-card">
                    <div class="card-img-wrap">
                        <img src="https://images.unsplash.com/photo-1543269865-cbf427effbad?q=80&w=600" alt="Img">
                    </div>
                    <div class="card-body-custom">
                        <span class="cat-label">Лекция / IT</span>
                        <a href="#" class="card-title">Искусственный интеллект: будущее уже здесь</a>
                        <div class="card-footer-custom">
                            <div>
                                <div class="info-item"><i class="bi bi-clock"></i> 19:00</div>
                                <div class="info-item fw-bold mt-2">15 BYN</div>
                            </div>
                            <a href="#" class="btn-arrow-link">БИЛЕТ &rarr;</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="afisha-card">
                    <div class="card-img-wrap">
                        <img src="https://images.unsplash.com/photo-1551836022-d5d88e9218df?q=80&w=600" alt="Img">
                    </div>
                    <div class="card-body-custom">
                        <span class="cat-label">Воркшоп</span>
                        <a href="#" class="card-title">Психология общения: как слышать других</a>
                        <div class="card-footer-custom">
                            <div>
                                <div class="info-item"><i class="bi bi-clock"></i> 14:00</div>
                                <div class="info-item fw-bold mt-2">20 BYN</div>
                            </div>
                            <a href="#" class="btn-arrow-link">БИЛЕТ &rarr;</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="afisha-card">
                    <div class="card-img-wrap">
                        <img src="https://images.unsplash.com/photo-1556761175-5973dc0f32e7?q=80&w=600" alt="Img">
                    </div>
                    <div class="card-body-custom">
                        <span class="cat-label">Мастер-класc</span>
                        <a href="#" class="card-title">Личный бренд в 2026 году</a>
                        <div class="card-footer-custom">
                            <div>
                                <div class="info-item"><i class="bi bi-clock"></i> 18:30</div>
                                <div class="info-item fw-bold mt-2">20 BYN</div>
                            </div>
                            <a href="#" class="btn-arrow-link">БИЛЕТ &rarr;</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- МИНИМАЛИСТИЧНАЯ ПАГИНАЦИЯ -->
    <div class="d-flex justify-content-center mt-5">
        <div style="display:flex; gap: 20px; font-family: 'Manrope'; align-items:center;">
            <a href="#" class="text-dark"><i class="bi bi-chevron-left"></i></a>
            <a href="#" class="text-dark fw-bold border-bottom border-dark text-decoration-none">1</a>
            <a href="#" class="text-muted text-decoration-none">2</a>
            <a href="#" class="text-muted text-decoration-none">3</a>
            <a href="#" class="text-dark"><i class="bi bi-chevron-right"></i></a>
        </div>
    </div>

</div>

<script>
    function scrollDates(direction) {
        const container = document.getElementById('datesScroll');
        const scrollAmount = 300;
        if (direction === 'left') {
            container.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
        } else {
            container.scrollBy({ left: scrollAmount, behavior: 'smooth' });
        }
    }

    function selectDate(element) {
        // Снимаем активный класс со всех
        document.querySelectorAll('.date-item').forEach(el => el.classList.remove('active'));
        // Ставим на текущий
        element.classList.add('active');

        // Тут можно добавить AJAX запрос для подгрузки событий
        // console.log("Выбрана дата");
    }
</script>