@page
@model Coffee.Pages.Events.IndexModel
@{
    ViewData["Title"] = "Афиша - EventSpace";
    var today = DateTime.Now;
    var daysToShow = 90;
}

<link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700;800&family=Playfair+Display:wght@400;500;600&display=swap" rel="stylesheet">

<style>
    :root {
        --bg-beige: #f9f7f2;
        --text-dark: #2c2c2c;
        --accent-red: #e74c3c;
        --border-color: #e0e0e0;
    }

    body {
        background-color: var(--bg-beige);
        color: var(--text-dark);
    }

    .date-ribbon-wrapper {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 3rem;
        max-width: 1100px;
        margin-left: auto;
        margin-right: auto;
        position: relative;
    }

    .nav-arrow-btn {
        width: 50px;
        height: 50px;
        border: 1px solid var(--border-color);
        border-radius: 50%;
        background: white;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        color: #2c2c2c;
        font-size: 1.2rem;
        transition: 0.3s;
        flex-shrink: 0;
        z-index: 2;
    }

        .nav-arrow-btn:hover {
            background-color: var(--text-dark);
            border-color: var(--text-dark);
            color: white;
        }

    .dates-scroll-container {
        flex-grow: 1;
        overflow-x: auto;
        white-space: nowrap;
        scrollbar-width: none;
        -ms-overflow-style: none;
        padding: 20px 0;
        display: flex;
        align-items: center;
        gap: 10px;
        mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent);
        -webkit-mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent);
    }

        .dates-scroll-container::-webkit-scrollbar {
            display: none;
        }

    .date-item {
        display: inline-flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 65px;
        height: 85px;
        cursor: pointer;
        opacity: 0.5;
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        user-select: none;
        position: relative;
        border-radius: 12px; 
        margin: 0 2px;
    }

        .date-item:hover {
            opacity: 0.9;
            background-color: rgba(0,0,0,0.03);
        }

        .date-item.has-event {
            opacity: 1 !important;
        }

            .date-item.has-event .day-number {
                font-weight: 700;
                color: var(--text-dark);
            }

    .day-name {
        font-family: 'Manrope', sans-serif;
        font-size: 0.85rem;
        color: #888;
        margin-bottom: 6px;
        text-transform: lowercase;
    }

    .day-number {
        font-family: 'Manrope', sans-serif;
        font-size: 2.2rem;
        font-weight: 500;
        color: var(--text-dark);
        line-height: 1;
    }

    .is-weekend .day-name {
        color: var(--accent-red);
    }

    .event-dot {
        position: absolute;
        bottom: 3px;
        left: 50%;
        transform: translateX(-50%);
        width: 6px;
        height: 6px;
        background-color: var(--accent-red);
        border-radius: 50%;
        box-shadow: 0 2px 4px rgba(231, 76, 60, 0.3);
        transition: 0.3s;
    }

    .date-item.active {
        background-color: var(--text-dark); 
        opacity: 1;
        transform: scale(1.05);
        box-shadow: 0 8px 20px rgba(0,0,0,0.25);
    }

        .date-item.active .day-name {
            color: rgba(255,255,255, 0.7) !important;
        }

        .date-item.active .day-number {
            color: white !important;
        }

        .date-item.active .event-dot {
            background-color: white;
            bottom: 8px;
            box-shadow: none;
        }

    .month-separator {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        height: 60px;
        padding: 0 25px;
        border-left: 1px solid #ddd;
        margin-left: 10px;
        margin-right: 10px;
    }

    .month-label {
        writing-mode: vertical-rl;
        transform: rotate(180deg);
        font-family: 'Manrope', sans-serif;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        font-size: 0.8rem;
        color: #bbb;
    }

    .afisha-card {
        background: white;
        border: none;
        margin-bottom: 30px;
        transition: 0.3s;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

        .afisha-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        }

    .card-img-wrap {
        height: 240px;
        overflow: hidden;
        position: relative;
    }

        .card-img-wrap img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s;
        }

    .afisha-card:hover .card-img-wrap img {
        transform: scale(1.05);
    }

    .card-body-custom {
        padding: 25px 30px;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .cat-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: #999;
        margin-bottom: 12px;
        display: block;
    }

    .card-title {
        font-family: 'Playfair Display', serif;
        font-size: 1.4rem;
        margin-bottom: 20px;
        line-height: 1.3;
        color: var(--text-dark);
        text-decoration: none;
    }

    .card-footer-custom {
        margin-top: auto;
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        border-top: 1px solid #f0f0f0;
        padding-top: 20px;
    }

    .info-item {
        font-family: 'Manrope', sans-serif;
        font-size: 0.95rem;
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 5px;
    }

    .btn-arrow-link {
        text-decoration: none;
        color: var(--text-dark);
        text-transform: uppercase;
        font-size: 0.8rem;
        font-weight: 600;
        border-bottom: 1px solid #ccc;
        padding-bottom: 3px;
        transition: 0.3s;
        letter-spacing: 0.05em;
    }

        .btn-arrow-link:hover {
            border-color: var(--text-dark);
            color: black;
        }
</style>

<div class="container py-5">
    <div class="row align-items-end mb-5">
        <div class="col-md-6 text-center text-md-start">
            <h1 style="font-family: 'Playfair Display'; font-size: 3.5rem;">Афиша</h1>
        </div>
        <div class="col-md-6 d-flex justify-content-end align-items-center gap-3">
            <button id="resetFilterBtn" class="btn btn-outline-dark rounded-pill px-4"
                    style="display: none; font-family: 'Manrope'; font-size: 0.9rem;"
                    onclick="resetFilter()">
                <i class="bi bi-x-lg me-2"></i> Показать все события
            </button>

            <form class="d-flex border-bottom border-secondary pb-2 justify-content-between" style="width: 250px;">
                <input type="text" placeholder="Поиск..." style="border:none; background:transparent; outline:none; font-family:'Manrope'; width: 100%; color: #333;">
                <button type="submit" style="background:none; border:none;"><i class="bi bi-search" style="font-size: 1.2rem;"></i></button>
            </form>
        </div>
    </div>

    <!-- ЛЕНТА ДАТ -->
    <div class="date-ribbon-wrapper">
        <div class="nav-arrow-btn" onclick="scrollDates('left')"><i class="bi bi-chevron-left"></i></div>

        <div class="dates-scroll-container" id="datesScroll">
            @for (int i = 0; i < daysToShow; i++)
            {
                var currentDate = today.AddDays(i).Date;
                var isWeekend = currentDate.DayOfWeek == DayOfWeek.Saturday || currentDate.DayOfWeek == DayOfWeek.Sunday;

                var activeClass = "";

                var hasEvent = Model.EventDates.Contains(currentDate);
                var dateString = currentDate.ToString("yyyy-MM-dd");

                if (i == 0 || currentDate.Day == 1)
                {
                    <div class="month-separator">
                        <span class="month-label">@currentDate.ToString("MMM").ToUpper()</span>
                    </div>
                }

                <div class="date-item @(isWeekend ? "is-weekend" : "") @activeClass @(hasEvent ? "has-event" : "")"
                     onclick="selectDate(this)"
                     data-date="@dateString">

                    <span class="day-name">@currentDate.ToString("ddd")</span>
                    <span class="day-number">@currentDate.ToString("dd")</span>

                    @if (hasEvent)
                    {
                        <span class="event-dot"></span>
                    }
                </div>
            }
        </div>

        <div class="nav-arrow-btn" onclick="scrollDates('right')"><i class="bi bi-chevron-right"></i></div>
    </div>

    <!-- СПИСОК СОБЫТИЙ -->
    <div class="row g-4" id="eventsContainer">
        @if (Model.Events != null && Model.Events.Any())
        {
            foreach (var item in Model.Events)
            {
                var itemDateStr = item.StartDate.ToString("yyyy-MM-dd");

                <div class="col-md-6 col-lg-4 event-col" data-event-date="@itemDateStr">
                    <div class="afisha-card">
                        <div class="card-img-wrap">
                            <img src="@($"https://picsum.photos/seed/{item.Id}/600/400")" alt="@item.Title">
                        </div>
                        <div class="card-body-custom">
                            <span class="cat-label">Событие</span>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="card-title">@item.Title</a>

                            <div class="card-footer-custom">
                                <div>
                                    <div class="info-item"><i class="bi bi-calendar"></i> @item.StartDate.ToString("dd MMMM")</div>
                                    <div class="info-item"><i class="bi bi-clock"></i> @item.StartDate.ToString("HH:mm")</div>
                                    <div class="info-item fw-bold mt-2">@((int)item.Price) ₽</div>
                                </div>
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn-arrow-link">
                                    Билет &rarr;
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <!-- Сообщение "Нет событий" -->
    <div id="noEventsMessage" class="text-center py-5" style="display: none;">
        <i class="bi bi-calendar-x" style="font-size: 3rem; color: #ddd;"></i>
        <p class="mt-3 text-muted" style="font-family: 'Manrope';">На эту дату событий нет</p>
        <button class="btn btn-link text-dark" onclick="resetFilter()">Показать все ближайшие</button>
    </div>

</div>

<script>
    // Скролл ленты
    function scrollDates(direction) {
        const container = document.getElementById('datesScroll');
        const scrollAmount = 300;
        container.scrollBy({ left: direction === 'left' ? -scrollAmount : scrollAmount, behavior: 'smooth' });
    }

    // Обработка клика по дате
    function selectDate(element) {
        // 1. Убираем класс active у всех
        document.querySelectorAll('.date-item').forEach(el => el.classList.remove('active'));

        // 2. Ставим active на нажатый элемент
        element.classList.add('active');

        const selectedDate = element.getAttribute('data-date');

        filterEventsByDate(selectedDate);
    }

    function filterEventsByDate(dateStr) {
        const allCols = document.querySelectorAll('.event-col');
        const resetBtn = document.getElementById('resetFilterBtn');
        const noEventsMsg = document.getElementById('noEventsMessage');
        let visibleCount = 0;

        allCols.forEach(col => {
            if (col.getAttribute('data-event-date') === dateStr) {
                col.style.display = 'block';
                visibleCount++;
                col.style.opacity = '0';
                setTimeout(() => col.style.opacity = '1', 50);
            } else {
                col.style.display = 'none';
            }
        });

        resetBtn.style.display = 'inline-block';

        // Если ничего не нашли - показываем заглушку
        if (visibleCount === 0) {
            noEventsMsg.style.display = 'block';
        } else {
            noEventsMsg.style.display = 'none';
        }
    }

    // Сброс фильтра
    function resetFilter() {
        // Снимаем выделение
        document.querySelectorAll('.date-item').forEach(el => el.classList.remove('active'));

        // Показываем все
        document.querySelectorAll('.event-col').forEach(col => {
            col.style.display = 'block';
            col.style.opacity = '1';
        });

        // Прячем кнопку и сообщение
        document.getElementById('resetFilterBtn').style.display = 'none';
        document.getElementById('noEventsMessage').style.display = 'none';
    }
</script>