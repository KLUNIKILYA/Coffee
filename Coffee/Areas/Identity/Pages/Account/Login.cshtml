@page
@model LoginModel

@{
    ViewData["Title"] = "Вход в систему";
}

<form id="account" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

    <div class="form-floating mb-3">
        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
        <label asp-for="Input.Email">Email</label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="Пароль" />
        <label asp-for="Input.Password">Пароль</label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="Input.RememberMe" />
        <label class="form-check-label text-muted" asp-for="Input.RememberMe">
            Запомнить меня
        </label>
    </div>

    <button id="login-submit" type="submit" class="btn btn-primary w-100 btn-lg fw-bold shadow-sm">Войти</button>

    <div class="text-center mt-3">
        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">
            Нет аккаунта? <span class="fw-bold">Зарегистрироваться</span>
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}