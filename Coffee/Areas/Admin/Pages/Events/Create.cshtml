@page
@model Coffee.Areas.Admin.Pages.Events.CreateModel
@{
    ViewData["Title"] = "Создать мероприятие";
}

<div class="container mt-4">
    <h2 class="text-white">Новое мероприятие</h2>
    <hr class="border-secondary" />
    <div class="row">
        <div class="col-md-8">
            <form method="post" enctype="multipart/form-data" class="text-white">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Input.Title" class="form-label">Название</label>
                    <input asp-for="Input.Title" class="form-control bg-dark text-white border-secondary" placeholder="Например: Лекция о кофе" />
                    <span asp-validation-for="Input.Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Description" class="form-label">Описание</label>
                    <textarea asp-for="Input.Description" class="form-control bg-dark text-white border-secondary" rows="4"></textarea>
                    <span asp-validation-for="Input.Description" class="text-danger"></span>
                </div>
                <div class="mb-3 p-3 border border-secondary rounded bg-dark">
                    <label class="form-label text-warning">Обложка мероприятия</label>
                    <input type="file" asp-for="Input.UploadedCover" class="form-control bg-secondary text-white border-0" accept="image/*" />
                    <div class="form-text text-muted">Рекомендуемый размер: 600x400 px. Форматы: jpg, png, webp.</div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Input.StartDate" class="form-label">Дата и время</label>
                        <input asp-for="Input.StartDate" class="form-control bg-dark text-white border-secondary" />
                        <span asp-validation-for="Input.StartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Input.Price" class="form-label">Цена (₽)</label>
                        <input asp-for="Input.Price" type="number" class="form-control bg-dark text-white border-secondary" />
                        <span asp-validation-for="Input.Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Input.Capacity" class="form-label">Вместимость (чел.)</label>
                        <input asp-for="Input.Capacity" type="number" class="form-control bg-dark text-white border-secondary" />
                        <span asp-validation-for="Input.Capacity" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Лектор</label>
                        <select asp-for="Input.LecturerId" class="form-select bg-dark text-white border-secondary" asp-items="Model.LecturerSl">
                            <option value="">-- Выберите лектора --</option>
                        </select>
                        <span asp-validation-for="Input.LecturerId" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-success px-4">Сохранить событие</button>
                    <a asp-page="./Index" class="btn btn-outline-light ms-2">Отмена</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}